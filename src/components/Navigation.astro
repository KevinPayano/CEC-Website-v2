---
import { Image } from 'astro:assets';
import CECLogo from '../assets/CEC Logo.png';

import PrimaryButton from './PrimaryButton.astro';
---

<header x-data="{ mobileMenuOpen: false }" class="relative z-10">

    <!-- Desktop Navigation Starts -->
    <nav class="mx-auto flex max-w-7xl items-center justify-between p-5 lg:px-8" aria-label="Global">

        <!-- Desktop Logo Starts -->
        <div class="flex lg:flex-1">
            <a href="/" class="-m-1.5 p-1.5">
                <span class="sr-only">Concrete Experts Company Logo Home Button</span>
                <Image src={CECLogo} alt="" class="w-52 md:w-64 xl:w-72"></Image>
            </a>
        </div>
        <!-- Desktop Logo Ends -->

        <!-- Hamburger Icon Starts -->
        <div class="flex lg:hidden">
            <button @click="mobileMenuOpen = true" type="button" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-zinc-100">
                <span class="sr-only">Open main menu</span>
                <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                </svg>
            </button>
        </div>
        <!-- Hamburger Icon Ends -->

        <!-- Desktop Links Starts -->
        <div class="hidden lg:flex lg:gap-x-12 *:text-sm *:font-medium *:leading-6 *:text-zinc-100">
            <a href="#" class="">Services</a>
            <a href="#" class="">About Us</a>
            <a href="#" class="">Portfolio</a>
            <a href="#" class="">Contact Us</a>
        </div>
        

        <!-- Right Links -->
        <div class="hidden items-center lg:flex lg:gap-x-12 lg:flex-1 lg:justify-end *:text-sm *:font-medium *:leading-6 *:text-zinc-100">
            <a href="#" class="">(336) 666-3247</a>
            <PrimaryButton href="#" title="Get a Quote"></PrimaryButton>
        </div>
        <!-- Desktop Links Ends -->

    </nav>
    <!-- Desktop Navigation Ends -->

    <!-- Mobile Navigation Starts -->
    <div x-description="Mobile menu, show/hide based on mobile menu state." x-show="mobileMenuOpen" class="lg:hidden" role="dialog" aria-modal="true">

        <div class="fixed inset-y-0 right-0 z-10 w-full overflow-y-auto bg-zinc-700 p-5 sm:max-w-sm">

            <!-- Logo & Close Button Container Start -->
            <div class="flex items-center justify-between">
                <!-- Logo Image Button -->
                <a href="#" class="-m-1.5 p-1.5">
                    <span class="sr-only">Concrete Experts Company Logo Home Button</span>
                    <Image src={CECLogo} alt="" class="w-52 md:w-64 xl:w-72"></Image>
                </a>

                <!-- Close Button -->
                <button @click="mobileMenuOpen = false" type="button" class="-m-2.5 rounded-md p-2.5 text-zinc-100">
                    <span class="sr-only">Close menu</span>
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
            <!-- Logo & Close Button Container Ends -->

            <!-- Links Container Starts -->
            <div class="mt-6 flow-root">
                <div class="-my-6 divide-y divide-gray-100">

                    <div class="space-y-2 py-6 *:-mx-3 *:block *:px-3 *:py-2 *:font-medium *:leading-7 *:text-zinc-100">
                        <a href="#" @click="mobileMenuOpen = false" class="">Services</a>
                        <a href="#" @click="mobileMenuOpen = false" class="">About Us</a>
                        <a href="#" @click="mobileMenuOpen = false" class="">Portfolio</a>
                        <a href="#" @click="mobileMenuOpen = false" class="">Contact Us</a>
                    </div>

                    <div class="py-4 space-y-4 *:-mx-3 *:block *:px-3 *:font-medium *:leading-7 *:text-zinc-100">
                        <a href="#" @click="mobileMenuOpen = false" class="">(336) 666-3247</a>
                        <PrimaryButton href="#" title="Get a Quote" @click="mobileMenuOpen = false"></PrimaryButton>
                    </div>

                </div>
            </div>
            <!-- Links Container Ends -->

        </div>

    </div>
    <!-- Mobile Navigation Ends -->
</header>
  